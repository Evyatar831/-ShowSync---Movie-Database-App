<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.all_movies.AllMoviesFragment"
    android:backgroundTint="#FFFFFF">

    <!-- RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <!-- Floating Action Button for Adding a Movie (Bottom Right) -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/add_a_movie"
        android:src="@drawable/ic_baseline_add_24"
        android:layout_margin="16dp"
        android:backgroundTint="#FFFF00"
        app:tint="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/> <!-- Aligns to Bottom Right -->

    <!-- Floating Action Button for Searching a Movie (Bottom Left) -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/go_to_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="Search a movie"
        android:src="@drawable/outline_api_24"
        android:layout_margin="16dp"
        android:backgroundTint="#FFFF00"
        app:tint="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/> <!-- Aligns to Bottom Left -->

</androidx.constraintlayout.widget.ConstraintLayout>
